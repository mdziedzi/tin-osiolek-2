<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.marcindziedzic.osiolek2">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/osiolek"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/osiolek_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".features.startupFeature.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".features.createNewNetFeature.CreateNewNetActivity" />
        <activity android:name=".features.connectToNetFeature.ConnectToNetActivity" />
        <activity android:name=".features.showAllRemoteFiles.ShowAllRemoteFilesActivity" />
    </application>

</manifest>